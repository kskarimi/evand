{
  "info": {
    "name": "Event Management API",
    "description": "Postman collection for Event Management Spring Modulith project.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "eventId",
      "value": ""
    },
    {
      "key": "attendeeId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Create Event",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/events",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Spring Modulith Workshop\",\n  \"startsAt\": \"2026-03-01T10:00:00\",\n  \"capacity\": 100\n}"
        }
      }
    },
    {
      "name": "List Events",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/events",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events"]
        }
      }
    },
    {
      "name": "Get Event By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/events/{{eventId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events", "{{eventId}}"]
        }
      }
    },
    {
      "name": "Create Attendee",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/attendees",
          "host": ["{{baseUrl}}"],
          "path": ["api", "attendees"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullName\": \"Karim Karimi\",\n  \"email\": \"karim@example.com\"\n}"
        }
      }
    },
    {
      "name": "List Attendees",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/attendees",
          "host": ["{{baseUrl}}"],
          "path": ["api", "attendees"]
        }
      }
    },
    {
      "name": "Create Registration",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/registrations",
          "host": ["{{baseUrl}}"],
          "path": ["api", "registrations"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"eventId\": \"{{eventId}}\",\n  \"attendeeId\": \"{{attendeeId}}\"\n}"
        }
      }
    },
    {
      "name": "List Registrations",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/registrations",
          "host": ["{{baseUrl}}"],
          "path": ["api", "registrations"]
        }
      }
    }
  ]
}
